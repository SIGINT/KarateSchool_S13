<div class="row">
	<div class="span1"></div>
	<div class="span4">
		<%= render :partial => "student_details" %>
	</div>
	<div class="span1"></div>
	<div class="span5">
		<div class="rounded-box">
		<% if @registrations.empty? %>
			<legend>No Active Registrations</legend>
			<br><br>
		<% else %>
			<%= render :partial => "activities" %>
		<% end %>
	  </div>
		<br><br>
	  <!-- <p class="supertiny">&nbsp;</p> -->
		<div class="rounded-box">
			<legend>Dojo History</legend>
			<%= render :partial => "dojo_history" unless @dojo_history.empty? %>
			<br>
		<%= link_to(raw("<i class='icon-plus icon-white'></i> New Dojo"), new_dojo_student_path(:id => @student.id, :from => 'student'), :class => 'btn btn-primary') %>
		</div>
		
	</div>
	<div class="span1"></div>
</div>
<br>

<div class="row">
	<div class="span1"></div>
	<div class="span10">
		<div class="form-actions">
		  <%= link_to raw("<i class='icon-list'></i> Display All Students"), students_path, :class => 'btn'  %>&nbsp;&nbsp;
		  <%= link_to raw("<i class='icon-pencil'></i> Edit #{@student.proper_name}"), edit_student_path(@student), :class => 'btn' %>&nbsp;&nbsp;
		  <%= link_to raw("<i class='icon-remove icon-white'></i> Delete #{@student.proper_name}"), student_path(@student), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
		</div>
	</div>
	<div class="span1"></div>
</div>