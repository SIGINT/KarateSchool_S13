<table class="table table-striped">
  <thead>
    <tr>
    	<th>Dojo</th>
			<th>Membership</th>
		</tr>
	</thead>
	<tbody>
		<% @dojo_history.each do |dh| %>
			<tr>
				<td><%= link_to dh.dojo.name, dojo_path(dh.dojo) %></td>
				<td><%= dh.end_date.nil? ? raw("<em>Current</em>") : "#{dh.start_date.strftime("%m/%d/%y")} - #{dh.end_date.strftime("%m/%d/%y")}" %></td>
			</tr>
		<% end %>
	</tbody>
</table>