<div class="row">
	<div class="span3"></div>
	<div class="span6">
		<%= simple_form_for @dojo_student, :html => { :class => 'form-horizontal' } do |f| %>
		  <fieldset>
				<legend><%= controller.action_name.capitalize %> Dojo Assignment</legend>
		
				<% if @student.nil? %>
					<%= f.input :student_id, :collection => Student.active.alphabetical.all %>
				<% else %>
					<%= f.input :student_id, :as => :hidden, :input_html => { :value => @student.id } %>
					<%= f.input :student_id, :disabled => true, :placeholder => @student.name %>
				<% end %>
				
				<% if @dojo.nil? %>
					<%= f.input :dojo_id, :collection => Dojo.active.alphabetical.all %>
				<% else %>
					<%= f.input :dojo_id, :as => :hidden, :input_html => { :value => @dojo.id } %>
					<%= f.input :dojo_id, :disabled => true, :placeholder => @dojo.name %>
				<% end %>
				
				<%= f.input :start_date, :as => :hidden, :input_html => { :value => Date.today } %>
			</fieldset>
	
			<div class="form-actions">
				<%= f.submit nil, :class => 'btn btn-primary' %>
			</div>
			
		<% end %>
	</div>
	<div class="span3"></div>
</div>