<div class="row">
	<div class="span3"></div>
	<div class="span6">
		<legend>Active Dojos</legend>
		<table class="table table-striped">
		  <thead>
		    <tr>
		      <th>Name</th>
					<th>Location</th>
					<th>Members</th>
		    </tr>
		  </thead>
		  <tbody>
				<% @dojos.each do |d| %>
					<tr>
						<td><%= link_to d.name, dojo_path(d) %></td>
						<td><%= d.city %>, <%= d.state %></td>
						<td><%= d.current_students.size %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<div class="digg_pagination">
	    <div clas="page_info">
	      <%= page_entries_info @dojos %>
	    </div>
	    <%= will_paginate @dojos, :container => true, :previous_label => "Previous", :next_label => "Next", :inner_window => 2 %>
	  </div>
		<br><br>
		<%= link_to raw("<i class='icon-plus icon-white'></i> Add a New Dojo"), new_dojo_path, :class => 'btn btn-primary', :id => 'Create Dojo' %>
	</div>
	<div class="span3"></div>
</div>