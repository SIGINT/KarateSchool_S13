<div class="row">
	<div class="span4"></div>
	<div class="span4">
		<div class="rounded-box">
			<legend>Log In</legend>
			<%= form_tag sessions_path do %>

				<div class="control-group">
			    <%= label_tag :email %>
			    <div class="controls">
			      <%= text_field_tag :email, params[:email] %>
			    </div>
			  </div>

				<div class="control-group">
			    <%= label_tag :password %>
			    <div class="controls">
			      <%= password_field_tag :password %>
			    </div>
			  </div>

		  	<div class="actions"><%= submit_tag "Log In" %></div>
			<% end %>
		</div>
		<br><br>
	</div>
	<div class="span4"></div>
</div>
